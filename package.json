    "lint:all": "npx @design-tools/design-ai-linter lint --files \"src/**/*.{tsx,css,ts}\""
  },
  "keywords": [
    "design-system",
    "linter",
    "figma",
    "tokens"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@design-tools/design-ai-linter": "^0.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "zod": "^3.22.0"
  },
  "packageManager": "pnpm@8.0.0",
  "volta": {
    "node": "20.18.1",
    "pnpm": "8.0.0"
  }
}

